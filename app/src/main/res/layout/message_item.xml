<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/view"
    android:gravity="center|left"
    android:weightSum="1"
    android:layout_marginBottom="@dimen/_15sdp"
    android:layout_height="@dimen/_60sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/cri_img"
        android:layout_centerInParent="true"
        android:layout_alignRight="@+id/cri_img"
        android:src="@drawable/doc_imgpro"
        app:civ_border_color="@color/f_color"
        app:civ_border_width="2dp" />
    <LinearLayout
        android:layout_weight=".8"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:text="ahmed mohamed"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:id="@+id/name"
            android:textSize="@dimen/_18sdp"
            android:layout_weight=".5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:weightSum="1">
        <TextView
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/msg"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="ya do that "
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center|left"
            android:textSize="@dimen/_13sdp"
            />
            <TextView
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/date"
                android:text="20:08 Am"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:textSize="@dimen/_10sdp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>