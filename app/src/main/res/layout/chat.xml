<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main_Screen.Scenario_messages.controller.Scenario_chat.chat">
 <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scaleType="fitXY"
     android:src="@drawable/chat"
     android:layout_marginTop="-55dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_10sdp"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight=".12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">
        <ImageView
            android:layout_weight=".08"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:id="@+id/finish"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back"/>
            <TextView
                android:text="Dr:ahmed taha"
                android:textSize="@dimen/_25sdp"
                android:layout_weight=".7"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/cri_img"
                android:layout_centerInParent="true"
                android:layout_alignRight="@+id/cri_img"
                android:src="@drawable/doc_imgpro"
                app:civ_border_color="@color/f_color"
                app:civ_border_width="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_25sdp"
            android:layout_weight=".75">
            <LinearLayout
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_lft"
                    android:padding="@dimen/_15sdp"
                    android:text="hello mohamed how do you do now i know your problem i hope you be well soon please take all medicines"/>
                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center|bottom"
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:text="10:18 AM"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center|bottom"
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:text="10:18 AM"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_rgt"
                    android:padding="@dimen/_15sdp"
                    android:text="hello mohamed how do you do now i know your problem i hope you be well soon please take all medicines"/>

            </LinearLayout>
            <LinearLayout
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_lft"
                    android:padding="@dimen/_15sdp"
                    android:text="hello mohamed how do you do now i know your problem i hope you be well soon please take all medicines"/>
                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center|bottom"
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:text="10:18 AM"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight=".13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_weight=".8"
                android:weightSum="1"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:orientation="horizontal"
                android:background="@drawable/type_msg_bg">
                <EditText
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_weight=".73"
                    android:hint="@string/type_your_message"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_image"
                    android:layout_weight=".12"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/take_pic"
                    android:layout_weight=".1"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".03"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".13"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/send_image"
                android:background="@drawable/doc_details_item_bg"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>